<div class="container">
    <h3>Edit post</h3>
    <form action="/posts/<%= post._id%>/update?_method=put" method="post">
        <input type="text" name="title" required placeholder="Title" value="<%= post.title %>" />
        <textarea name="description" placeholder="description"><%= post.description %></textarea>
        <input type="submit" class="btn" value="submit"/>
    </form>
</div>